<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.crazydwarf.phonerefuel.view.SimpleToolBar
        android:id="@+id/toolbar_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:appIcon="@drawable/app_icon_tmp"
        app:appIconShow="true"
        app:appIconSize="40dp"
        app:backIcon="@drawable/ic_chevron_left_black_32dp"
        app:backIconSize="32dp"
        app:menuIconShow="false"
        app:title="当前手机号余额"
        app:titleColor="@color/colorBlack"
        app:titleSize="20sp" />

    <ImageView
        android:id="@+id/im_flag"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_top"
        app:srcCompat="@drawable/im_flag_us" />

    <TextView
        android:id="@+id/tv_postcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="+01"
        android:textColor="@color/colorBlack"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/im_flag"
        app:layout_constraintStart_toEndOf="@+id/im_flag"
        app:layout_constraintTop_toTopOf="@+id/im_flag" />

    <EditText
        android:id="@+id/et_phonenumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:ems="7"
        android:hint="123 4567"
        android:inputType="phone"
        android:textColor="@color/colorBlack"
        android:textSize="30sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@+id/tv_postcode"
        app:layout_constraintStart_toEndOf="@+id/tv_postcode"
        app:layout_constraintTop_toTopOf="@+id/tv_postcode" />

    <TextView
        android:id="@+id/textview0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="当前余额（dollar）"
        app:layout_constraintStart_toStartOf="@+id/im_flag"
        app:layout_constraintTop_toBottomOf="@+id/et_phonenumber" />

    <EditText
        android:id="@+id/et_current_balance"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text="$99.99"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="@+id/textview0"
        app:layout_constraintTop_toBottomOf="@+id/textview0" />

    <TextView
        android:id="@+id/tv_exrate3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="当前汇率：1dollar = 6.81rmb"
        app:layout_constraintStart_toStartOf="@+id/et_current_balance"
        app:layout_constraintTop_toBottomOf="@+id/et_current_balance" />

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="剩余流量（Mb）"
        app:layout_constraintStart_toStartOf="@+id/tv_exrate3"
        app:layout_constraintTop_toBottomOf="@+id/tv_exrate3" />

    <EditText
        android:id="@+id/et_current_flow"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text="99.99"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="@+id/textview"
        app:layout_constraintTop_toBottomOf="@+id/textview" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_current_flow"
        app:srcCompat="@color/colorGray" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="近3次充值记录"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/et_current_flow"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

</android.support.constraint.ConstraintLayout>